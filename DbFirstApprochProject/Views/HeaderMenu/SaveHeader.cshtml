@model DbFirstApprochProject.Services.Models.HeaderMenuVM;

@{
    ViewData["Title"] = "Index";
}

<form method="post">
    <div class=" container border pb-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Category</h2>
        </div>
